// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model JournalEntry {
  id         String     @id @default(cuid())
  date       DateTime   @unique
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  activities Activity[]
}

model Activity {
  id          String           @id @default(cuid())
  description String
  duration    Int? // Duration in minutes
  notes       String?
  category    ActivityCategory
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  journalEntry   JournalEntry @relation(fields: [journalEntryId], references: [id])
  journalEntryId String

  tags Tag[]
}

// Add the new enum
enum ActivityCategory {
  PROFESSIONAL // 9-5 work
  PROJECT // side project, personal work
  LIFE // personal activities
}

model Tag {
  id         String     @id @default(cuid())
  name       String     @unique
  activities Activity[]
}

enum ReportType {
  WEEKLY
  MONTHLY
}

// New Enum for Report Generation Status
enum ReportStatus {
  PENDING
  COMPLETED
  FAILED
}

// New Model to store generated reports
model Report {
  id        String       @id @default(cuid())
  type      ReportType
  status    ReportStatus @default(PENDING)
  startDate DateTime
  endDate   DateTime
  content   Json? // The structured JSON output from the LLM
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@unique([type, startDate]) // Ensure only one report of a given type starts on a specific day
}
